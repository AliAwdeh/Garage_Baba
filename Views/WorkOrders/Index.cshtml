@model Project_Advanced.Models.ViewModels.PaginatedList<Project_Advanced.Models.WorkOrder>
@{
    ViewData["Title"] = "Work Orders";
    var searchPlate = ViewData["searchPlate"] as string;
    var status = ViewData["status"] as Project_Advanced.Models.WorkOrderStatus?;
}

<div class="container">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-3 gap-2">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex gap-2">
            <form method="get" asp-action="Index" class="row g-2 align-items-center">
                <div class="col-auto">
                    <input class="form-control" type="search" name="searchPlate" value="@searchPlate" placeholder="Search plate/make/model" />
                </div>
                <div class="col-auto">
                    <select name="status" class="form-select">
                        <option value="">All statuses</option>
                        @foreach (Project_Advanced.Models.WorkOrderStatus s in Enum.GetValues(typeof(Project_Advanced.Models.WorkOrderStatus)))
                        {
                            <option value="@s" selected="@(status == s ? "selected" : null)">@s</option>
                        }
                    </select>
                </div>
                <div class="col-auto d-flex gap-2">
                    <button class="btn btn-outline-secondary" type="submit">Filter</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Reset</a>
                </div>
            </form>
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-action="Create">Create Work Order</a>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Plate</th>
                            <th>Vehicle</th>
                            <th>Customer</th>
                            <th>Created</th>
                            <th>Status</th>
                            <th>Problem</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Vehicle?.PlateNumber</td>
                            <td>@($"{item.Vehicle?.Make} {item.Vehicle?.Model}")</td>
                            <td>@($"{item.Vehicle?.Customer?.FirstName} {item.Vehicle?.Customer?.LastName}")</td>
                            <td>@item.CreatedAt.ToLocalTime().ToString("g")</td>
                            <td>@item.Status</td>
                            <td>@item.ProblemDescription</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No work orders found.</div>
    }

    @if (Model != null && Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">Page @Model.PageIndex of @Model.TotalPages</div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.HasPreviousPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-searchPlate="@searchPlate"
                   asp-route-status="@status">Previous</a>
                <a class="btn btn-outline-secondary @(Model.HasNextPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-searchPlate="@searchPlate"
                   asp-route-status="@status">Next</a>
            </div>
        </nav>
    }
</div>
