@model Project_Advanced.Models.WorkOrder
@{
    ViewData["Title"] = "Work Order Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <form id="openChatDetailsForm" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="issueContextValue" value="@Model?.ProblemDescription" />
                    <button type="button" class="btn btn-secondary" id="btnOpenChatDetails">Open Chat</button>
                </form>
                @if (ViewBag.Invoice is Project_Advanced.Models.Invoice inv)
                {
                    <a class="btn btn-success" asp-controller="Invoices" asp-action="Details" asp-route-id="@inv.Id">View Invoice</a>
                }
                else
                {
                    <form asp-controller="Invoices" asp-action="GenerateForWorkOrder" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="workOrderId" value="@Model?.Id" />
                        <button type="submit" class="btn btn-outline-success">Generate Invoice</button>
                    </form>
                }
            }
            <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
        </div>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">@($"{Model.Vehicle?.PlateNumber} - {Model.Vehicle?.Make} {Model.Vehicle?.Model}")</dd>

                <dt class="col-sm-3">Customer</dt>
                <dd class="col-sm-9">@($"{Model.Vehicle?.Customer?.FirstName} {Model.Vehicle?.Customer?.LastName}")</dd>

                <dt class="col-sm-3">Created</dt>
                <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("f")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Problem</dt>
                <dd class="col-sm-9">@Model.ProblemDescription</dd>

                <dt class="col-sm-3">Odometer</dt>
                <dd class="col-sm-9">@Model.RecordedOdometer</dd>
            </dl>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title">Items</h5>
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Qty</th>
                            <th>Unit Price</th>
                            <th>Line Total</th>
                        </tr>
                    </thead>
                    <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ItemType</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity.ToString("0.00")</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" class="text-end fw-semibold">Total</td>
                            <td class="fw-semibold">@Model.Items.Sum(i => i.Quantity * i.UnitPrice).ToString("C")</td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No items</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('btnOpenChatDetails')?.addEventListener('click', function () {
            const token = document.querySelector('#openChatDetailsForm input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("CreateAndStartChatForWorkOrder", "Chat")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                    'RequestVerificationToken': token,
                    'X-Requested-With': 'XMLHttpRequest' // <-- important
                },
                body: new URLSearchParams({
                    'workOrderId': '@Model?.Id',
                    '__RequestVerificationToken': token
                })
            })
            .then(r => {
                if (!r.ok) return r.text().then(t => { throw new Error(t); });
                return r.json();
            })
            .then(data => {
                if (data && data.conversationId) {
                    window.location.href = '@Url.Action("Conversation", "Chat")' + '?id=' + data.conversationId;
                }
            })
            .catch(err => {
                console.error(err);
                alert('Unable to open chat for this work order.');
            });
        });

    </script>
}
