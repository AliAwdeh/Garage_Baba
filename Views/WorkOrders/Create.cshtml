@model Project_Advanced.Models.WorkOrder
@{
    ViewData["Title"] = "Create Work Order";
}

<div class="container">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Create" class="card card-body shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="VehicleId" class="form-label">Vehicle</label>
                    <input type="hidden" asp-for="VehicleId" id="VehicleId" />
                    @{
                        var vehicleOptions = ViewBag.VehicleId as IEnumerable<SelectListItem>;
                        var selectedVehicleLabel = vehicleOptions?.FirstOrDefault(v => v.Value == Model?.VehicleId.ToString())?.Text ?? "";
                    }
                    <input type="text"
                           id="vehicleSearch"
                           class="form-control"
                           list="vehicleOptionsList"
                           placeholder="Search by plate, make/model, or customer"
                           value="@selectedVehicleLabel"
                           autocomplete="off" />
                    <datalist id="vehicleOptionsList">
                        @if (vehicleOptions != null)
                        {
                            foreach (var opt in vehicleOptions)
                            {
                                <option value="@opt.Text" data-id="@opt.Value"></option>
                            }
                        }
                    </datalist>
                    <small class="form-text text-muted">Select an entry; the vehicle will be linked by ID.</small>
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProblemDescription" class="form-label">Problem Description</label>
                    <textarea asp-for="ProblemDescription" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="ProblemDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="RecordedOdometer" class="form-label">Recorded Odometer</label>
                    <input asp-for="RecordedOdometer" class="form-control" />
                    <span asp-validation-for="RecordedOdometer" class="text-danger"></span>
                </div>

                <input asp-for="Status" type="hidden" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const vehicleInput = document.getElementById('vehicleSearch');
            const vehicleHidden = document.getElementById('VehicleId');
            const options = document.querySelectorAll('#vehicleOptionsList option');

            function syncVehicle() {
                const val = vehicleInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                vehicleHidden.value = match || '';
            }

            vehicleInput?.addEventListener('input', syncVehicle);
            vehicleInput?.addEventListener('change', syncVehicle);
        })();
    </script>
}
