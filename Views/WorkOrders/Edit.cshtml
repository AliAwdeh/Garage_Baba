@model Project_Advanced.Models.WorkOrder

@{
    ViewData["Title"] = "Edit Work Order";
    var parts = ViewBag.Parts as List<Project_Advanced.Models.Part>;
    Layout = "_Layout";
}

<h1>Edit Work Order #@Model.Id</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Work Order Info</h4>
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="mb-3">
                <label asp-for="VehicleId" class="form-label">Vehicle</label>
                <input type="hidden" asp-for="VehicleId" id="VehicleId" />
                @{
                    var vehicleOptions = ViewBag.VehicleId as IEnumerable<SelectListItem>;
                    var selectedVehicleLabel = vehicleOptions?.FirstOrDefault(v => v.Value == Model?.VehicleId.ToString())?.Text ?? "";
                }
                <input type="text"
                       id="vehicleSearch"
                       class="form-control"
                       list="vehicleOptionsList"
                       placeholder="Search by plate, make/model, or customer"
                       value="@selectedVehicleLabel"
                       autocomplete="off" />
                <datalist id="vehicleOptionsList">
                    @if (vehicleOptions != null)
                    {
                        foreach (var opt in vehicleOptions)
                        {
                            <option value="@opt.Text" data-id="@opt.Value"></option>
                        }
                    }
                </datalist>
                <small class="form-text text-muted">Select an entry; the vehicle will be linked by ID.</small>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Customer</label>
                <input class="form-control"
                       value="@($"{Model.Vehicle?.Customer?.FirstName} {Model.Vehicle?.Customer?.LastName}")"
                       disabled />
            </div>

            <div class="mb-3">
                <label asp-for="RecordedOdometer" class="form-label"></label>
                <input asp-for="RecordedOdometer" class="form-control" />
                <span asp-validation-for="RecordedOdometer" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProblemDescription" class="form-label"></label>
                <textarea asp-for="ProblemDescription" class="form-control" rows="4" id="problemDescription"></textarea>
                <div class="d-flex align-items-center gap-2 mt-1">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnRecordProblem">
                        <span id="recordIcon">ðŸŽ¤</span> Use mic
                    </button>
                    <span id="recordStatus" class="small text-muted">Idle</span>
                </div>
                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex flex-wrap gap-2 align-items-start">
                <div class="flex-grow-1">
                    <label class="form-label">AI Chat</label>
                    <small class="text-muted d-block mt-1">
                        Open the chat assistant to discuss this work order.
                    </small>
                </div>
                <div class="d-flex flex-column gap-2">
                    <button type="button" class="btn btn-sm btn-secondary" id="btnOpenChat">
                        Open Chat
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select"
                        asp-items="Html.GetEnumSelectList<Project_Advanced.Models.WorkOrderStatus>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Work Order</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>

        <div class="mt-3">
            <form asp-controller="Invoices" asp-action="GenerateForWorkOrder" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="workOrderId" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-primary">Generate Invoice</button>
            </form>
        </div>

    </div>

    <div class="col-md-6">
        <h4>Items (Parts & Labor)</h4>

        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ItemType</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity.ToString("0.00")</td>
                                <td>@string.Format("{0:0.00}", item.UnitPrice)</td>
                                <td>@string.Format("{0:0.00}", item.Quantity * item.UnitPrice)</td>
                                <td>
                                    <form asp-action="DeleteItem" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" class="text-end"><strong>Total</strong></td>
                    <td colspan="2">
                        @string.Format("{0:0.00}", Model.Items.Sum(i => i.Quantity * i.UnitPrice))
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No items yet.</td>
                </tr>
            }
            </tbody>
        </table>

        <h5>Add Item</h5>
        @if (TempData["WorkOrderItemError"] is string itemError && !string.IsNullOrWhiteSpace(itemError))
        {
            <div class="alert alert-danger">@itemError</div>
        }
        <form asp-action="AddItem" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="workOrderId" value="@Model.Id" />

            <div class="col-4">
                <label class="form-label">Type</label>
                <select name="ItemType" class="form-select" id="itemTypeSelect">
                    <option value="Part">Part</option>
                    <option value="Labor">Labor</option>
                </select>
            </div>

            <div class="col-8" id="partSelectWrapper">
                <label class="form-label">Part</label>
                <input type="hidden" name="PartId" id="PartId" />
                @{
                    var partsList = parts ?? new List<Project_Advanced.Models.Part>();
                }
                <input type="text"
                       id="partSearch"
                       class="form-control"
                       list="partOptionsList"
                       placeholder="Search part by name"
                       autocomplete="off" />
                <datalist id="partOptionsList">
                    @foreach (var p in partsList)
                    {
                        <option value="@p.Name" data-id="@p.Id">@p.Name (@string.Format("{0:0.00}", p.UnitPrice))</option>
                    }
                </datalist>
                <small class="form-text text-muted">Pick a suggestion to link the part by ID.</small>
            </div>

            <div class="col-12" id="laborDescriptionWrapper" style="display:none;">
                <label class="form-label">Description (Labor)</label>
                <input type="text" name="Description" class="form-control" placeholder="e.g., Engine diagnostics, brake inspection..." />
            </div>

            <div class="col-4">
                <label class="form-label">Qty</label>
                <input type="number" step="0.1" name="Quantity" class="form-control" value="1" />
            </div>

            <div class="col-4">
                <label class="form-label">Unit Price</label>
                <input type="number" step="0.01" name="UnitPrice" class="form-control" value="0" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-success mt-2">Add Item</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        // Toggle between Part and Labor fields
        document.getElementById('itemTypeSelect').addEventListener('change', function () {
            var type = this.value;
            var partWrapper = document.getElementById('partSelectWrapper');
            var laborWrapper = document.getElementById('laborDescriptionWrapper');

            if (type === 'Part') {
                partWrapper.style.display = 'block';
                laborWrapper.style.display = 'none';
                document.getElementById('partSearch').value = '';
                document.getElementById('PartId').value = '';
            } else {
                partWrapper.style.display = 'none';
                laborWrapper.style.display = 'block';
                document.getElementById('partSearch').value = '';
                document.getElementById('PartId').value = '';
            }
        });

        // Open chat prefilled with work order info
        document.getElementById('btnOpenChat').addEventListener('click', function () {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("CreateAndStartChatForWorkOrder", "Chat")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    'workOrderId': '@Model.Id',
                    '__RequestVerificationToken': token
                })
            })
            .then(r => {
                if (!r.ok) return r.text().then(t => { throw new Error(t); });
                return r.json();
            })
            .then(data => {
                if (data && data.conversationId) {
                    window.location.href = '@Url.Action("Conversation", "Chat")' + '?id=' + data.conversationId;
                }
            })
            .catch(err => {
                console.error(err);
                alert('Unable to open chat for this work order.');
            });
        });

        // Vehicle search -> hidden ID sync
        (function () {
            const vehicleInput = document.getElementById('vehicleSearch');
            const vehicleHidden = document.getElementById('VehicleId');
            const options = document.querySelectorAll('#vehicleOptionsList option');

            function syncVehicle() {
                const val = vehicleInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                vehicleHidden.value = match || '';
            }

            vehicleInput?.addEventListener('input', syncVehicle);
            vehicleInput?.addEventListener('change', syncVehicle);
        })();

        // Part search -> hidden ID sync
        (function () {
            const partInput = document.getElementById('partSearch');
            const partHidden = document.getElementById('PartId');
            const options = document.querySelectorAll('#partOptionsList option');

            function syncPart() {
                const val = partInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                partHidden.value = match || '';
            }

            partInput?.addEventListener('input', syncPart);
            partInput?.addEventListener('change', syncPart);
        })();

        // Mic -> Whisper transcription for problem description
        (function () {
            const btnRecord = document.getElementById('btnRecordProblem');
            const statusEl = document.getElementById('recordStatus');
            const descEl = document.getElementById('problemDescription');
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            let mediaRecorder = null;
            let chunks = [];
            let stream = null;
            const mimeType = MediaRecorder.isTypeSupported('audio/webm') ? 'audio/webm' : '';

            function setStatus(text, isError = false) {
                statusEl.textContent = text;
                statusEl.classList.toggle('text-danger', isError);
            }

            async function startRecording() {
                try {
                    stream = await navigator.mediaDevices.getUserMedia({ audio: true });
                    mediaRecorder = new MediaRecorder(stream, mimeType ? { mimeType } : undefined);

                    chunks = [];
                    mediaRecorder.ondataavailable = e => {
                        if (e.data && e.data.size > 0) {
                            chunks.push(e.data);
                        }
                    };

                    mediaRecorder.onstop = async () => {
                        setStatus('Transcribing...');
                        const blob = new Blob(chunks, { type: mimeType || 'audio/webm' });
                        const wavBlob = await convertToWav(blob);
                        const formData = new FormData();
                        formData.append('audioFile', wavBlob, 'recording.wav');
                        formData.append('__RequestVerificationToken', token);

                        try {
                            const resp = await fetch('@Url.Action("TranscribeProblemDescription", "WorkOrders")', {
                                method: 'POST',
                                body: formData
                            });
                            const data = await resp.json().catch(() => ({}));
                            if (resp.ok && data.text) {
                                const current = descEl.value?.trim();
                                descEl.value = current ? current + "\n" + data.text : data.text;
                                setStatus('Done');
                            } else {
                                setStatus((data && (data.error || data.detail)) || 'Transcription failed.', true);
                            }
                        } catch (err) {
                            console.error(err);
                            setStatus('Transcription failed.', true);
                        } finally {
                            stream?.getTracks().forEach(t => t.stop());
                            mediaRecorder = null;
                            stream = null;
                        }
                    };

                    mediaRecorder.start();
                    setStatus('Recording... click again to stop');
                } catch (err) {
                    console.error(err);
                    setStatus('Mic access denied or unavailable.', true);
                }
            }

            function stopRecording() {
                if (mediaRecorder && mediaRecorder.state === 'recording') {
                    mediaRecorder.stop();
                }
            }

            btnRecord?.addEventListener('click', () => {
                if (!mediaRecorder || mediaRecorder.state === 'inactive') {
                    startRecording();
                } else {
                    stopRecording();
                }
            });

            async function convertToWav(webmBlob) {
                const arrayBuffer = await webmBlob.arrayBuffer();
                const audioCtx = new AudioContext();
                const decoded = await audioCtx.decodeAudioData(arrayBuffer);

                const targetRate = 16000;
                const offlineCtx = new OfflineAudioContext(1, Math.ceil(decoded.duration * targetRate), targetRate);
                const source = offlineCtx.createBufferSource();
                source.buffer = decoded;
                source.connect(offlineCtx.destination);
                source.start(0);
                const rendered = await offlineCtx.startRendering();

                const channelData = rendered.getChannelData(0);
                const wavBuffer = encodeWav(channelData, targetRate);

                await audioCtx.close();
                await offlineCtx.close?.();
                return new Blob([wavBuffer], { type: 'audio/wav' });
            }

            function encodeWav(samples, sampleRate) {
                const buffer = new ArrayBuffer(44 + samples.length * 2);
                const view = new DataView(buffer);

                writeString(view, 0, 'RIFF');
                view.setUint32(4, 36 + samples.length * 2, true);
                writeString(view, 8, 'WAVE');
                writeString(view, 12, 'fmt ');
                view.setUint32(16, 16, true); // fmt chunk size
                view.setUint16(20, 1, true);  // PCM
                view.setUint16(22, 1, true);  // mono
                view.setUint32(24, sampleRate, true);
                view.setUint32(28, sampleRate * 2, true); // byte rate
                view.setUint16(32, 2, true); // block align
                view.setUint16(34, 16, true); // bits per sample
                writeString(view, 36, 'data');
                view.setUint32(40, samples.length * 2, true);

                floatTo16BitPCM(view, 44, samples);
                return buffer;
            }

            function writeString(view, offset, string) {
                for (let i = 0; i < string.length; i++) {
                    view.setUint8(offset + i, string.charCodeAt(i));
                }
            }

            function floatTo16BitPCM(view, offset, input) {
                for (let i = 0; i < input.length; i++, offset += 2) {
                    let s = Math.max(-1, Math.min(1, input[i]));
                    view.setInt16(offset, s < 0 ? s * 0x8000 : s * 0x7FFF, true);
                }
            }
        })();
    </script>
}
