@model Project_Advanced.Models.WorkOrder

@{
    ViewData["Title"] = "Edit Work Order";
    var parts = ViewBag.Parts as List<Project_Advanced.Models.Part>;
    Layout = "_Layout";
}

<h1>Edit Work Order #@Model.Id</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Work Order Info</h4>
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedAt" />

            <div class="mb-3">
                <label asp-for="VehicleId" class="form-label">Vehicle</label>
                <input type="hidden" asp-for="VehicleId" id="VehicleId" />
                @{
                    var vehicleOptions = ViewBag.VehicleId as IEnumerable<SelectListItem>;
                    var selectedVehicleLabel = vehicleOptions?.FirstOrDefault(v => v.Value == Model?.VehicleId.ToString())?.Text ?? "";
                }
                <input type="text"
                       id="vehicleSearch"
                       class="form-control"
                       list="vehicleOptionsList"
                       placeholder="Search by plate, make/model, or customer"
                       value="@selectedVehicleLabel"
                       autocomplete="off" />
                <datalist id="vehicleOptionsList">
                    @if (vehicleOptions != null)
                    {
                        foreach (var opt in vehicleOptions)
                        {
                            <option value="@opt.Text" data-id="@opt.Value"></option>
                        }
                    }
                </datalist>
                <small class="form-text text-muted">Select an entry; the vehicle will be linked by ID.</small>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Customer</label>
                <input class="form-control"
                       value="@($"{Model.Vehicle?.Customer?.FirstName} {Model.Vehicle?.Customer?.LastName}")"
                       disabled />
            </div>

            <div class="mb-3">
                <label asp-for="RecordedOdometer" class="form-label"></label>
                <input asp-for="RecordedOdometer" class="form-control" />
                <span asp-validation-for="RecordedOdometer" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ProblemDescription" class="form-label"></label>
                <textarea asp-for="ProblemDescription" class="form-control" rows="4" id="problemDescription"></textarea>
                <span asp-validation-for="ProblemDescription" class="text-danger"></span>
            </div>

            <div class="mb-3 d-flex flex-wrap gap-2 align-items-start">
                <div class="flex-grow-1">
                    <label class="form-label">AI Chat</label>
                    <small class="text-muted d-block mt-1">
                        Open the chat assistant to discuss this work order.
                    </small>
                </div>
                <div class="d-flex flex-column gap-2">
                    <button type="button" class="btn btn-sm btn-secondary" id="btnOpenChat">
                        Open Chat
                    </button>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label"></label>
                <select asp-for="Status" class="form-select"
                        asp-items="Html.GetEnumSelectList<Project_Advanced.Models.WorkOrderStatus>()">
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Work Order</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>

        <div class="mt-3">
            <form asp-controller="Invoices" asp-action="GenerateForWorkOrder" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="workOrderId" value="@Model.Id" />
                <button type="submit" class="btn btn-outline-primary">Generate Invoice</button>
            </form>
        </div>

    </div>

    <div class="col-md-6">
        <h4>Items (Parts & Labor)</h4>

        <table class="table table-bordered table-sm">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Qty</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @if (Model.Items != null && Model.Items.Any())
            {
                foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@item.ItemType</td>
                                <td>@item.Description</td>
                                <td>@item.Quantity.ToString("0.00")</td>
                                <td>@string.Format("{0:0.00}", item.UnitPrice)</td>
                                <td>@string.Format("{0:0.00}", item.Quantity * item.UnitPrice)</td>
                                <td>
                                    <form asp-action="DeleteItem" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">X</button>
                            </form>
                        </td>
                    </tr>
                }
                <tr>
                    <td colspan="4" class="text-end"><strong>Total</strong></td>
                    <td colspan="2">
                        @string.Format("{0:0.00}", Model.Items.Sum(i => i.Quantity * i.UnitPrice))
                    </td>
                </tr>
            }
            else
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">No items yet.</td>
                </tr>
            }
            </tbody>
        </table>

        <h5>Add Item</h5>
        @if (TempData["WorkOrderItemError"] is string itemError && !string.IsNullOrWhiteSpace(itemError))
        {
            <div class="alert alert-danger">@itemError</div>
        }
        <form asp-action="AddItem" method="post" class="row g-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="workOrderId" value="@Model.Id" />

            <div class="col-4">
                <label class="form-label">Type</label>
                <select name="ItemType" class="form-select" id="itemTypeSelect">
                    <option value="Part">Part</option>
                    <option value="Labor">Labor</option>
                </select>
            </div>

            <div class="col-8" id="partSelectWrapper">
                <label class="form-label">Part</label>
                <input type="hidden" name="PartId" id="PartId" />
                @{
                    var partsList = parts ?? new List<Project_Advanced.Models.Part>();
                }
                <input type="text"
                       id="partSearch"
                       class="form-control"
                       list="partOptionsList"
                       placeholder="Search part by name"
                       autocomplete="off" />
                <datalist id="partOptionsList">
                    @foreach (var p in partsList)
                    {
                        <option value="@p.Name" data-id="@p.Id">@p.Name (@string.Format("{0:0.00}", p.UnitPrice))</option>
                    }
                </datalist>
                <small class="form-text text-muted">Pick a suggestion to link the part by ID.</small>
            </div>

            <div class="col-12" id="laborDescriptionWrapper" style="display:none;">
                <label class="form-label">Description (Labor)</label>
                <input type="text" name="Description" class="form-control" placeholder="e.g., Engine diagnostics, brake inspection..." />
            </div>

            <div class="col-4">
                <label class="form-label">Qty</label>
                <input type="number" step="0.1" name="Quantity" class="form-control" value="1" />
            </div>

            <div class="col-4">
                <label class="form-label">Unit Price</label>
                <input type="number" step="0.01" name="UnitPrice" class="form-control" value="0" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-success mt-2">Add Item</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        // Toggle between Part and Labor fields
        document.getElementById('itemTypeSelect').addEventListener('change', function () {
            var type = this.value;
            var partWrapper = document.getElementById('partSelectWrapper');
            var laborWrapper = document.getElementById('laborDescriptionWrapper');

            if (type === 'Part') {
                partWrapper.style.display = 'block';
                laborWrapper.style.display = 'none';
                document.getElementById('partSearch').value = '';
                document.getElementById('PartId').value = '';
            } else {
                partWrapper.style.display = 'none';
                laborWrapper.style.display = 'block';
                document.getElementById('partSearch').value = '';
                document.getElementById('PartId').value = '';
            }
        });

        // Open chat prefilled with work order info
        document.getElementById('btnOpenChat').addEventListener('click', function () {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            fetch('@Url.Action("CreateAndStartChatForWorkOrder", "Chat")', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    'workOrderId': '@Model.Id',
                    '__RequestVerificationToken': token
                })
            })
            .then(r => {
                if (!r.ok) return r.text().then(t => { throw new Error(t); });
                return r.json();
            })
            .then(data => {
                if (data && data.conversationId) {
                    window.location.href = '@Url.Action("Conversation", "Chat")' + '?id=' + data.conversationId;
                }
            })
            .catch(err => {
                console.error(err);
                alert('Unable to open chat for this work order.');
            });
        });

        // Vehicle search -> hidden ID sync
        (function () {
            const vehicleInput = document.getElementById('vehicleSearch');
            const vehicleHidden = document.getElementById('VehicleId');
            const options = document.querySelectorAll('#vehicleOptionsList option');

            function syncVehicle() {
                const val = vehicleInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                vehicleHidden.value = match || '';
            }

            vehicleInput?.addEventListener('input', syncVehicle);
            vehicleInput?.addEventListener('change', syncVehicle);
        })();

        // Part search -> hidden ID sync
        (function () {
            const partInput = document.getElementById('partSearch');
            const partHidden = document.getElementById('PartId');
            const options = document.querySelectorAll('#partOptionsList option');

            function syncPart() {
                const val = partInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                partHidden.value = match || '';
            }

            partInput?.addEventListener('input', syncPart);
            partInput?.addEventListener('change', syncPart);
        })();
    </script>
}
