@model Project_Advanced.Models.Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container">
    <h2 class="mb-3 text-danger">@ViewData["Title"]</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this vehicle?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3">Plate</dt>
                <dd class="col-sm-9">@Model.PlateNumber</dd>

                <dt class="col-sm-3">Make</dt>
                <dd class="col-sm-9">@Model.Make</dd>

                <dt class="col-sm-3">Model</dt>
                <dd class="col-sm-9">@Model.Model</dd>

                <dt class="col-sm-3">Year</dt>
                <dd class="col-sm-9">@Model.Year</dd>

                <dt class="col-sm-3">Current Odometer</dt>
                <dd class="col-sm-9">@Model.CurrentOdometer</dd>

                <dt class="col-sm-3">Owner</dt>
                <dd class="col-sm-9">@($"{Model.Customer?.FirstName} {Model.Customer?.LastName}")</dd>
            </dl>
            <form asp-action="Delete" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
