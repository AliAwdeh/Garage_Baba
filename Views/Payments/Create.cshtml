@model Project_Advanced.Models.Payment

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Invoice</label>
                <input type="hidden" asp-for="InvoiceId" id="InvoiceId" />
                @{
                    var invoiceOptions = ViewBag.InvoiceOptions as IEnumerable<dynamic>;
                }
                <input type="text"
                       id="invoiceSearch"
                       class="form-control"
                       list="invoiceOptionsList"
                       placeholder="Search invoice by number, plate, or customer"
                       autocomplete="off" />
                <datalist id="invoiceOptionsList">
                    @if (invoiceOptions != null)
                    {
                        foreach (var opt in invoiceOptions)
                        {
                            <option value="@opt.Label" data-id="@opt.Id"></option>
                        }
                    }
                </datalist>
                <small class="form-text text-muted">Select a suggestion; it links the invoice by ID.</small>
                <span asp-validation-for="InvoiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaidAt" class="control-label"></label>
                <input asp-for="PaidAt" class="form-control" />
                <span asp-validation-for="PaidAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Method" class="control-label"></label>
                <select asp-for="Method" class="form-control" asp-items="Html.GetEnumSelectList<Project_Advanced.Models.PaymentMethod>()"></select>
                <span asp-validation-for="Method" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        (function () {
            const invoiceInput = document.getElementById('invoiceSearch');
            const invoiceHidden = document.getElementById('InvoiceId');
            const options = document.querySelectorAll('#invoiceOptionsList option');

            function syncInvoice() {
                const val = invoiceInput.value;
                let match = null;
                options.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                invoiceHidden.value = match || '';
            }

            invoiceInput?.addEventListener('input', syncInvoice);
            invoiceInput?.addEventListener('change', syncInvoice);
        })();
    </script>
}
</body>
</html>
