@model Project_Advanced.Models.ViewModels.PaginatedList<Project_Advanced.Models.Part>

@{
    ViewData["Title"] = "Parts";
    var search = ViewData["search"] as string;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-md-row gap-2">
        <div>
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <div class="text-muted small">Inventory parts list</div>
        </div>
        <div class="d-flex flex-column flex-md-row gap-2">
            <form class="d-flex gap-2" method="get" asp-action="Index">
                <input class="form-control" type="search" name="search" value="@search" placeholder="Search name or part #" />
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>
            <a class="btn btn-primary" asp-action="Create"><span class="me-1">+</span>New Part</a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Part #</th>
                            <th>Unit Price</th>
                            <th>Stock</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.PartNumber</td>
                            <td>@item.UnitPrice.ToString("C")</td>
                            <td>@item.StockQuantity</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No parts found.</div>
    }

    @if (Model != null && Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">Page @Model.PageIndex of @Model.TotalPages</div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.HasPreviousPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-search="@search">Previous</a>
                <a class="btn btn-outline-secondary @(Model.HasNextPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-search="@search">Next</a>
            </div>
        </nav>
    }
</div>
