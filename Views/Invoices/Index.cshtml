@model Project_Advanced.Models.ViewModels.PaginatedList<Project_Advanced.Models.Invoice>
@{
    ViewData["Title"] = "Invoices";
    var search = ViewData["search"] as string;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-md-row gap-2">
        <div>
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <div class="text-muted small">Invoice history</div>
        </div>
        <div class="d-flex flex-column flex-md-row gap-2">
            <form method="get" asp-action="Index" class="d-flex gap-2">
                <input class="form-control" type="search" name="search" value="@search" placeholder="Search invoice, customer, plate" />
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Work Order</th>
                            <th>Customer</th>
                            <th>Issued</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@($"{item.WorkOrder?.Id} - {item.WorkOrder?.Vehicle?.PlateNumber}")</td>
                            <td>@($"{item.Customer?.FirstName} {item.Customer?.LastName}")</td>
                            <td>@item.IssuedAt.ToLocalTime().ToString("g")</td>
                            <td>@item.Total.ToString("C")</td>
                            <td>@item.Status</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No invoices found.</div>
    }

    @if (Model != null && Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">Page @Model.PageIndex of @Model.TotalPages</div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.HasPreviousPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-search="@search">Previous</a>
                <a class="btn btn-outline-secondary @(Model.HasNextPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-search="@search">Next</a>
            </div>
        </nav>
    }
</div>
