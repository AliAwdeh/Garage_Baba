@model Project_Advanced.Models.ViewModels.PaginatedList<Project_Advanced.Controllers.AdminUserViewModel>
@{
    ViewData["Title"] = "Manage Users";
    var search = ViewData["search"] as string;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-md-row gap-2">
        <h2 class="mb-0">Manage Users</h2>
        <form class="d-flex gap-2" method="get" asp-action="ManageUsers">
            <input class="form-control" type="search" name="search" value="@search" placeholder="Search email or username" />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </form>
    </div>

    @if (TempData["Error"] is string err && !string.IsNullOrEmpty(err))
    {
        <div class="alert alert-danger">@err</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Email</th>
                            <th>Roles</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        var isAdmin = user.Roles.Contains("Admin");
                        <tr>
                            <td>@user.Email</td>
                            <td>@string.Join(", ", user.Roles)</td>
                            <td class="text-end">
                                @if (!isAdmin)
                                {
                                    <form asp-action="PromoteToAdmin" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary">Make Admin</button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-action="RemoveAdmin" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove Admin</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No users found.</div>
    }

    @if (Model != null && Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">Page @Model.PageIndex of @Model.TotalPages</div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.HasPreviousPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-search="@search">Previous</a>
                <a class="btn btn-outline-secondary @(Model.HasNextPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-search="@search">Next</a>
            </div>
        </nav>
    }
</div>
