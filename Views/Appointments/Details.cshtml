@model Project_Advanced.Models.Appointment

@{
    ViewData["Title"] = "Appointment Details";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div class="d-flex gap-2">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
            <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">Customer</dt>
                <dd class="col-sm-9">@($"{Model.Customer?.FirstName} {Model.Customer?.LastName}")</dd>

                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">
                    @(Model.Vehicle != null ? $"{Model.Vehicle.PlateNumber} - {Model.Vehicle.Make} {Model.Vehicle.Model}" : "-")
                </dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("f")</dd>

                <dt class="col-sm-3">Reason</dt>
                <dd class="col-sm-9">@Model.Reason</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>
</div>
