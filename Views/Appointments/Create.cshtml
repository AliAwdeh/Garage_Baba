@model Project_Advanced.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
    var isAdmin = (bool)(ViewBag.IsAdmin ?? false);
    var minDate = DateTime.Now.Date.AddDays(1).ToString("yyyy-MM-dd");
}

<div class="container">
    <h2 class="mb-3">@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-lg-6">
            <form asp-action="Create" class="card card-body shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (isAdmin)
                {
                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <input type="hidden" asp-for="CustomerId" id="CustomerId" />
                        @{
                            var customerOptions = ViewBag.CustomerOptions as IEnumerable<dynamic>;
                        }
                        <input type="text"
                               id="customerSearch"
                               class="form-control"
                               list="customerOptionsList"
                               placeholder="Search customer by name or phone"
                               autocomplete="off" />
                        <datalist id="customerOptionsList">
                            @if (customerOptions != null)
                            {
                                foreach (var c in customerOptions)
                                {
                                    <option value="@c.Label" data-id="@c.Id"></option>
                                }
                            }
                        </datalist>
                        <small class="form-text text-muted">Select a suggestion; customer is linked by ID.</small>
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <input asp-for="CustomerId" type="hidden" />
                }

                <div class="mb-3">
                    <label asp-for="VehicleId" class="form-label">Vehicle</label>
                    <input type="hidden" asp-for="VehicleId" id="VehicleId" />
                    @{
                        var vehicleOptions = ViewBag.VehicleOptions as IEnumerable<dynamic>;
                    }
                    <input type="text"
                           id="vehicleSearch"
                           class="form-control"
                           list="vehicleOptionsList"
                           placeholder="Search vehicle by plate or model"
                           autocomplete="off" />
                    <datalist id="vehicleOptionsList">
                        @if (vehicleOptions != null)
                        {
                            foreach (var v in vehicleOptions)
                            {
                                <option value="@v.Label" data-id="@v.Id" data-customer="@v.CustomerId"></option>
                            }
                        }
                    </datalist>
                    <small class="form-text text-muted">Select a suggestion; vehicle is linked by ID.</small>
                    <span asp-validation-for="VehicleId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Date</label>
                    <input id="appointmentDate"
                           class="form-control"
                           type="date"
                           min="@minDate"
                           value="@minDate" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Time</label>
                    <select id="appointmentTime" class="form-select">
                        <!-- options filled by JS -->
                    </select>
                    <div id="noSlotsMessage" class="text-muted" style="display:none;">
                        No available time slots for this date. Please choose another day.
                    </div>
                </div>

                <!-- Real field bound to model -->
                <input asp-for="AppointmentDate" type="hidden" id="AppointmentDateHidden" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>

                <div class="mb-3">
                    <label asp-for="Reason" class="form-label">Reason</label>
                    <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Reason" class="text-danger"></span>
                </div>

                @if (isAdmin)
                {
                    <div class="mb-3">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status"
                                class="form-select"
                                asp-items="Html.GetEnumSelectList<Project_Advanced.Models.AppointmentStatus>()">
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <input asp-for="Status" type="hidden" />
                }

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        (function () {
            const customerInput = document.getElementById('customerSearch');
            const customerHidden = document.getElementById('CustomerId');
            const customerOptions = document.querySelectorAll('#customerOptionsList option');

            const vehicleInput = document.getElementById('vehicleSearch');
            const vehicleHidden = document.getElementById('VehicleId');
            const vehicleOptions = document.querySelectorAll('#vehicleOptionsList option');

            function syncCustomer() {
                const val = customerInput.value;
                let match = null;
                customerOptions.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                    }
                });
                customerHidden.value = match || '';
                filterVehicles(match);
            }

            function filterVehicles(customerId) {
                if (!vehicleInput) return;
                const matchedVehicle = Array.from(vehicleOptions).find(opt => {
                    const byCustomer = customerId ? opt.getAttribute('data-customer') === customerId : true;
                    return byCustomer && opt.value === vehicleInput.value;
                });
                // clear selection if current vehicle doesn't match selected customer
                const currentVehicleCustomer = Array.from(vehicleOptions).find(opt => opt.value === vehicleInput.value)?.getAttribute('data-customer');
                if (customerId && currentVehicleCustomer && currentVehicleCustomer !== customerId) {
                    vehicleInput.value = '';
                    vehicleHidden.value = '';
                }
            }

            function syncVehicle() {
                const val = vehicleInput.value;
                let match = null;
                let matchCustomer = null;
                vehicleOptions.forEach(opt => {
                    if (opt.value === val) {
                        match = opt.getAttribute('data-id');
                        matchCustomer = opt.getAttribute('data-customer');
                    }
                });
                vehicleHidden.value = match || '';
                if (matchCustomer) {
                    customerHidden.value = matchCustomer;
                    const custOpt = Array.from(customerOptions).find(o => o.getAttribute('data-id') === matchCustomer);
                    customerInput.value = custOpt ? custOpt.value : customerInput.value;
                }
            }

            customerInput?.addEventListener('input', syncCustomer);
            customerInput?.addEventListener('change', syncCustomer);
            vehicleInput?.addEventListener('input', syncVehicle);
            vehicleInput?.addEventListener('change', syncVehicle);

            // === Date + time slot logic (1-hour increments) ===
            const dateInput = document.getElementById('appointmentDate');
            const timeSelect = document.getElementById('appointmentTime');
            const hiddenDateTime = document.getElementById('AppointmentDateHidden');
            const noSlotsMessage = document.getElementById('noSlotsMessage');

            async function loadSlots() {
                const dateValue = dateInput.value;
                timeSelect.innerHTML = '';
                noSlotsMessage.style.display = 'none';

                if (!dateValue) {
                    hiddenDateTime.value = '';
                    return;
                }

                try {
                    const response = await fetch(`/Appointments/GetAvailableSlots?date=${dateValue}`);
                    if (!response.ok) {
                        console.warn('Failed to load slots');
                        return;
                    }

                    const slots = await response.json();

                    if (!slots || slots.length === 0) {
                        noSlotsMessage.style.display = 'block';
                        hiddenDateTime.value = '';
                        return;
                    }

                    slots.forEach(t => {
                        const opt = document.createElement('option');
                        opt.value = t;
                        opt.textContent = t;
                        timeSelect.appendChild(opt);
                    });

                    updateHidden();
                } catch (e) {
                    console.error(e);
                }
            }

            function updateHidden() {
                const dateValue = dateInput.value;
                const timeValue = timeSelect.value;
                if (!dateValue || !timeValue) {
                    hiddenDateTime.value = '';
                    return;
                }
                // Combine into a single local datetime string
                hiddenDateTime.value = `${dateValue}T${timeValue}:00`;
            }

            if (dateInput && timeSelect && hiddenDateTime) {
                dateInput.addEventListener('change', loadSlots);
                timeSelect.addEventListener('change', updateHidden);

                // Pre-load slots for default date (tomorrow)
                if (dateInput.value) {
                    loadSlots();
                }
            }
        })();
    </script>
}
