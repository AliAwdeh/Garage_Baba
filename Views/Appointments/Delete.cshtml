@model Project_Advanced.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container">
    <h2 class="mb-3 text-danger">@ViewData["Title"]</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <p class="lead">Are you sure you want to delete this appointment?</p>
            <dl class="row mb-4">
                <dt class="col-sm-3">Customer</dt>
                <dd class="col-sm-9">@($"{Model.Customer?.FirstName} {Model.Customer?.LastName}")</dd>

                <dt class="col-sm-3">Vehicle</dt>
                <dd class="col-sm-9">
                    @(Model.Vehicle != null ? $"{Model.Vehicle.PlateNumber} - {Model.Vehicle.Make} {Model.Vehicle.Model}" : "-")
                </dd>

                <dt class="col-sm-3">Date</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("f")</dd>

                <dt class="col-sm-3">Reason</dt>
                <dd class="col-sm-9">@Model.Reason</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
            <form asp-action="Delete" class="d-flex gap-2">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Back to list</a>
            </form>
        </div>
    </div>
</div>
