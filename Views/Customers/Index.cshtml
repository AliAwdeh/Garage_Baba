@model Project_Advanced.Models.ViewModels.PaginatedList<Project_Advanced.Models.Customer>

@{
    ViewData["Title"] = "Customers";
    var search = ViewData["search"] as string;
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-column flex-md-row gap-2">
        <div>
            <h2 class="mb-0">@ViewData["Title"]</h2>
            <div class="text-muted small">Manage customer records and quick actions.</div>
        </div>
        <div class="d-flex flex-column flex-md-row gap-2">
            <form class="d-flex gap-2" method="get" asp-action="Index">
                <input class="form-control" type="search" name="search" value="@search" placeholder="Search name, email, phone" />
                <button class="btn btn-outline-secondary" type="submit">Search</button>
            </form>
            <a class="btn btn-primary" asp-action="Create">
                <span class="me-1">+</span>New Customer
            </a>
        </div>
    </div>

    @if (TempData["InviteLink"] is string invite && TempData["InviteEmail"] is string inviteEmail)
    {
        <div class="alert alert-success">
            Login link for <strong>@inviteEmail</strong>:
            <a href="@invite" class="text-break">@invite</a>
        </div>
    }
    else if (TempData["RevokeMessage"] is string revoke && !string.IsNullOrEmpty(revoke))
    {
        <div class="alert alert-warning">@revoke</div>
    }
    @{
        var errorMessage = TempData["Error"] as string;
    }
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Address</th>
                            <th>Has Account</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@($"{item.FirstName} {item.LastName}")</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>
                                @if (!string.IsNullOrWhiteSpace(item.ApplicationUserId))
                                {
                                    <span class="badge text-bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">No</span>
                                }
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <form asp-action="GenerateLoginLink" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-success">Generate login link</button>
                                </form>
                                <form asp-action="RevokeLogin" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-warning">Revoke login</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">No customers found. Use the button above to add one.</div>
    }

    @if (Model != null && Model.TotalPages > 1)
    {
        <nav class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">Page @Model.PageIndex of @Model.TotalPages</div>
            <div class="btn-group">
                <a class="btn btn-outline-secondary @(Model.HasPreviousPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex - 1)"
                   asp-route-search="@search">Previous</a>
                <a class="btn btn-outline-secondary @(Model.HasNextPage ? "" : "disabled")"
                   asp-route-page="@(Model.PageIndex + 1)"
                   asp-route-search="@search">Next</a>
            </div>
        </nav>
    }
</div>
