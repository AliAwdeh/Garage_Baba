@model Project_Advanced.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h2 class="card-title mb-2 text-danger">@ViewData["Title"]</h2>
                    <p class="text-muted">This action cannot be undone.</p>

                    <dl class="row">
                        <dt class="col-sm-4 col-lg-3 text-muted">Name</dt>
                        <dd class="col-sm-8 col-lg-9">@($"{Model.FirstName} {Model.LastName}")</dd>

                        <dt class="col-sm-4 col-lg-3 text-muted">Phone</dt>
                        <dd class="col-sm-8 col-lg-9">@Model.Phone</dd>

                        <dt class="col-sm-4 col-lg-3 text-muted">Email</dt>
                        <dd class="col-sm-8 col-lg-9">@Model.Email</dd>

                        <dt class="col-sm-4 col-lg-3 text-muted">Address</dt>
                        <dd class="col-sm-8 col-lg-9">@Model.Address</dd>

                        <dt class="col-sm-4 col-lg-3 text-muted">User Id</dt>
                        <dd class="col-sm-8 col-lg-9 text-muted">@Model.ApplicationUserId</dd>
                    </dl>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
